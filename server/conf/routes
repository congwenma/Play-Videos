# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                 	controllers.Application.index

# http://localhost:9000/productArgs?prodType=PenciL&prodNum=2
GET     /productArgs        controllers.Application.product(prodType, prodNum: Int)

# http://localhost:9000/product/PenciL/2
GET     /product/:prodType/:prodNum        controllers.Application.product(prodType, prodNum: Int)

# regexp
# http://localhost:9000/productRE/PE123/2
GET     /productRE/$prodType<[a-zA-Z]{2}\d*>/:prodNum     controllers.Application.product(prodType, prodNum: Int)




GET     /login              controllers.TaskList1.login
GET     /tasklist1          controllers.TaskList1.taskList
GET     /validateLoginGet     controllers.TaskList1.validateLoginGet(username, password)

+nocsrf
POST    /validatePost     controllers.TaskList1.validatePost
+nocsrf
POST    /createUser     controllers.TaskList1.createUser

GET    /loginAs/:username     controllers.TaskList1.loginAs(username)

GET     /logout             controllers.TaskList1.logout








# Prefix must match `play.assets.urlPrefix`
GET        /assets/*file                 controllers.Assets.at(file)
GET        /versionedAssets/*file        controllers.Assets.versioned(path="/public", file: Asset)
